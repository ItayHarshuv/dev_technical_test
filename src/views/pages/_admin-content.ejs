<main class="container my-5">
    <div class="mb-4">
        <h1 class="h2">Net Yield Return Simulations</h1>
    </div>

    <% if (typeof error !== 'undefined' && error) { %>
        <div class="alert alert-danger" role="alert">
            <%= error %>
        </div>
    <% } %>

    <% if (typeof simulations !== 'undefined' && simulations.length > 0) { %>
        <div class="overflow-x-auto">
            <table class="table table-striped table-hover table-bordered">
                <thead>
                    <tr>
                        <th scope="col" class="bg-primary text-white fw-normal">Created At</th>
                        <th scope="col" class="bg-primary text-white fw-normal">Prospect Email Address</th>
                        <th scope="col" class="bg-primary text-white fw-normal">Property Purchase Price</th>
                        <th scope="col" class="bg-primary text-white fw-normal">Monthly Rental Amount</th>
                        <th scope="col" class="bg-primary text-white fw-normal">Annual Rental Fee</th>
                        <th scope="col" class="bg-primary text-white fw-normal">Average Monthly Net Income (3 Years)</th>
                        <th scope="col" class="bg-primary text-white fw-normal">Monthly Net Return (3 Years)</th>
                    </tr>
                </thead>
                <tbody>
                    <% simulations.forEach(function(sim) { %>
                        <tr>
                            <td class="align-middle"><%= new Date(sim.createdAt).toLocaleString('en-US', { 
                                year: 'numeric', 
                                month: 'short', 
                                day: 'numeric', 
                                hour: '2-digit', 
                                minute: '2-digit' 
                            }) %></td>
                            <td class="align-middle"><%= sim.prospectEmailAddress %></td>
                            <td class="align-middle">$<%= sim.propertyPurchasePrice.toLocaleString('en-US', { minimumFractionDigits: 2, maximumFractionDigits: 2 }) %></td>
                            <td class="align-middle">$<%= sim.monthlyRentalAmount.toLocaleString('en-US', { minimumFractionDigits: 2, maximumFractionDigits: 2 }) %></td>
                            <td class="align-middle">$<%= sim.annualRentalFee.toLocaleString('en-US', { minimumFractionDigits: 2, maximumFractionDigits: 2 }) %></td>
                            <td class="align-middle">$<%= sim.threeYearMonthlyAverageNetIncome.toLocaleString('en-US', { minimumFractionDigits: 2, maximumFractionDigits: 2 }) %></td>
                            <td class="align-middle"><span class="text-success fw-normal"><%= sim.monthlyNetReturnForThreeYears.toFixed(2) %>%</span></td>
                        </tr>
                    <% }); %>
                </tbody>
            </table>
        </div>
    <% } else { %>
        <div class="alert alert-info" role="alert">
            No simulations found in the database.
        </div>
    <% } %>
</main>

